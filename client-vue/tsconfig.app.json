{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "lib": ["es2021", "dom", "dom.iterable"],
    // "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": [
        "../common/*"
      ],
      "@server/*" : [
        "../server/src/*"
      ]
    }
  }
}
